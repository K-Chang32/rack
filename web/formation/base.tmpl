{{ define "formation" }}
  {{ $app := . }}
  {
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Parameters" : {
      "Release" : {
        "Type" : "String",
        "Default" : "",
        "Description" : "Release"
      },
      "Repository" : {
        "Type" : "String",
        "Default" : "",
        "Description" : "Repository"
      }
    },
    "Mappings": {
      "Variables": {
        "Ami": { "Value": "{{ .Ami }}" }
      }
    },
    "Resources": {
      "Convox{{ upper .Name }}BaseVpc": {
        "Type": "AWS::EC2::VPC",
        "Properties": {
          "CidrBlock": "10.0.0.0/16",
          "InstanceTenancy": "default",
          "Tags": [
            { "Key": "Name", "Value": "{{.Name}}" }
          ]
        }
      },
      "Convox{{ upper .Name }}BaseGateway": {
        "Type": "AWS::EC2::InternetGateway",
        "Properties": {
        }
      },
      "Convox{{ upper .Name }}BaseGatewayAttachment": {
        "Type": "AWS::EC2::VPCGatewayAttachment",
        "Properties": {
          "InternetGatewayId": { "Ref": "Convox{{ upper .Name }}BaseGateway" },
          "VpcId": { "Ref": "Convox{{ upper .Name }}BaseVpc" }
        }
      },
      "Convox{{ upper .Name }}BaseRoutes": {
        "Type": "AWS::EC2::RouteTable",
        "Properties": {
          "VpcId": { "Ref": "Convox{{ upper .Name }}BaseVpc" }
        }
      },
      "Convox{{ upper .Name }}BaseRouteDefault": {
        "Type": "AWS::EC2::Route",
        "Properties": {
          "DestinationCidrBlock": "0.0.0.0/0",
          "GatewayId": { "Ref": "Convox{{ upper .Name }}BaseGateway" },
          "RouteTableId": { "Ref": "Convox{{ upper .Name }}BaseRoutes" }
        }
      },
      {{ range $i, $subnet := .Subnets }}
        "Convox{{ upper $app.Name }}BaseSubnet{{ $i }}": {
          "Type": "AWS::EC2::Subnet",
          "Properties": {
            "AvailabilityZone": "{{ .AvailabilityZone }}",
            "CidrBlock": "{{ .Cidr }}",
            "VpcId": { "Ref": "Convox{{ upper $app.Name }}BaseVpc" }
          }
        },
        "Convox{{ upper $app.Name }}BaseSubnet{{ $i }}Routes": {
          "Type": "AWS::EC2::SubnetRouteTableAssociation",
          "Properties": {
            "SubnetId": { "Ref": "Convox{{ upper $app.Name }}BaseSubnet{{ $i }}" },
            "RouteTableId": { "Ref": "Convox{{ upper $app.Name }}BaseRoutes" }
          }
        },
      {{ end }}
      "Convox{{ upper .Name }}BaseLogGroup": {
        "Type": "AWS::Logs::LogGroup",
        "Properties": {
          "RetentionInDays": 7
        }
      },
      {{ safe .ProcessFormation }}
      {{ safe .ServiceFormation }}
      "Convox{{ upper .Name }}BaseSecurityGroup": {
        "Type": "AWS::EC2::SecurityGroup",
        "Properties": {
          "GroupDescription": "Instances",
          "SecurityGroupIngress": [
            { "IpProtocol": "tcp", "FromPort": "22", "ToPort": "22", "CidrIp": "24.98.26.131/32" },
            { "IpProtocol": "tcp", "FromPort": "3000", "ToPort": "3000", "CidrIp": "0.0.0.0/0" }
          ],
          "VpcId": { "Ref": "Convox{{ upper .Name }}BaseVpc" }
        }
      },
      "Convox{{ upper .Name }}BaseDynamoBuilds": {
        "Type": "AWS::DynamoDB::Table",
        "Properties": {
          "TableName": "convox-{{ .Name }}-builds",
          "AttributeDefinitions": [
            { "AttributeName": "id", "AttributeType": "S" },
            { "AttributeName": "app", "AttributeType": "S" },
            { "AttributeName": "created", "AttributeType": "S" }
          ],
          "KeySchema": [
            { "AttributeName": "id", "KeyType": "HASH" }
          ],
          "GlobalSecondaryIndexes": [{
            "IndexName": "app.created",
            "KeySchema": [
              { "AttributeName": "app", "KeyType": "HASH" },
              { "AttributeName": "created", "KeyType": "RANGE" }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": "5",
              "WriteCapacityUnits": "5"
            }
          }],
          "ProvisionedThroughput": {
            "ReadCapacityUnits": "5",
            "WriteCapacityUnits": "5"
          }
        }
      },
      "Convox{{ upper .Name }}BaseDynamoEnv": {
        "Type": "AWS::DynamoDB::Table",
        "Properties": {
          "TableName": "convox-{{ .Name }}-env",
          "AttributeDefinitions": [
            { "AttributeName": "name", "AttributeType": "S" }
          ],
          "KeySchema": [
            { "AttributeName": "name", "KeyType": "HASH" }
          ],
          "ProvisionedThroughput": {
            "ReadCapacityUnits": "5",
            "WriteCapacityUnits": "5"
          }
        }
      },
      "Convox{{ upper .Name }}BaseDynamoProcesses": {
        "Type": "AWS::DynamoDB::Table",
        "Properties": {
          "TableName": "convox-{{ .Name }}-processes",
          "AttributeDefinitions": [
            { "AttributeName": "name", "AttributeType": "S" }
          ],
          "KeySchema": [
            { "AttributeName": "name", "KeyType": "HASH" }
          ],
          "ProvisionedThroughput": {
            "ReadCapacityUnits": "5",
            "WriteCapacityUnits": "5"
          }
        }
      },
      "Convox{{ upper .Name }}BaseDynamoReleases": {
        "Type": "AWS::DynamoDB::Table",
        "Properties": {
          "TableName": "convox-{{ .Name }}-releases",
          "AttributeDefinitions": [
            { "AttributeName": "id", "AttributeType": "S" },
            { "AttributeName": "app", "AttributeType": "S" },
            { "AttributeName": "created", "AttributeType": "S" }
          ],
          "KeySchema": [
            { "AttributeName": "id", "KeyType": "HASH" }
          ],
          "GlobalSecondaryIndexes": [{
            "IndexName": "app.created",
            "KeySchema": [
              { "AttributeName": "app", "KeyType": "HASH" },
              { "AttributeName": "created", "KeyType": "RANGE" }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": "5",
              "WriteCapacityUnits": "5"
            }
          }],
          "ProvisionedThroughput": {
            "ReadCapacityUnits": "5",
            "WriteCapacityUnits": "5"
          }
        }
      },
      "Convox{{ upper .Name }}BaseDynamoServices": {
        "Type": "AWS::DynamoDB::Table",
        "Properties": {
          "TableName": "convox-{{ .Name }}-services",
          "AttributeDefinitions": [
            { "AttributeName": "name", "AttributeType": "S" }
          ],
          "KeySchema": [
            { "AttributeName": "name", "KeyType": "HASH" }
          ],
          "ProvisionedThroughput": {
            "ReadCapacityUnits": "5",
            "WriteCapacityUnits": "5"
          }
        }
      }
    },
    "Outputs": {
      {{ range .Processes }}
        {{ if .Balancer }}
          "Balancer{{ upper .Name }}Host": {
            "Value": { "Fn::GetAtt": [ "Convox{{ upper $app.Name }}{{ upper .Name }}Balancer", "DNSName" ] }
          },
        {{ end }}
      {{ end }}
      "BaseSecurityGroup": {
        "Value": { "Ref": "Convox{{ upper .Name }}BaseSecurityGroup" }
      }
    }
  }
{{ end }}
