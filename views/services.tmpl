{{ define "title" }} Convox {{ end }}

{{ define "body" }}

	<ol class="breadcrumb">
		<button id="btn-service-create" id="service-create" class="btn btn-success btn-xs trackable" data-toggle="modal" data-target="#service-create">Create Service</button>
		<li class="active">Services</li>
	</ol>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th class="expand">Name</th>
				<th>Service</th>
				<th>Status</th>
			</tr>
		</thead>
		<tbody>
			{{ range . }}
				<tr>
					<td class="meta-buttons">
						<button class="btn btn-xs btn-primary glyph" data-container="body" data-toggle="popover" data-placement="left" data-trigger="focus" data-content="<a href='{{ .URL }}'>{{ .URL }}</a>">
							<span class="glyphicon glyphicon-random">
						</button>
						<a href="/services/{{ .Name }}">{{ .Name }}</a>
					</td>
					<td>{{ .Tags.Service }}</td>
					<td>{{ .Status }}</td>
				</tr>
			{{ end }}
		</tbody>
	</table>

	{{ template "modals" . }}

{{ end }}

{{ define "names" }}
	{{ range . }}
		<option value="{{ .Name }}">{{ .Name }}</option>
	{{ end }}
{{ end }}

{{ define "modals" }}
	<div class="modal fade" id="service-create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<form method="post" action="/services" class="form-horizontal">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title" id="myModalLabel">Create Service</h4>
					</div>
					<div class="modal-body">
						<div class="form-group">
							<label for="service-name" class="col-sm-3 control-label">Service Name</label>
							<div class="col-sm-8">
								<input name="name" type="text" class="form-control" id="service-name">
							</div>
						</div>
						<div class="form-group">
							<label for="service-password" class="col-sm-3 control-label">Service Password</label>
							<div class="col-sm-8">
								<input name="password" type="password" class="form-control" id="service-password">
							</div>
						</div>
						<div class="form-group">
							<label for="service-type" class="col-sm-3 control-label">Service Type</label>
							<div class="col-sm-8">
								<select name="type" class="form-control" id="service-type">
									<option value="postgres">Postgres</option>
									<option value="redis">Redis</option>
								</select>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
						<input type="submit" class="btn btn-primary" value="Create Service">
					</div>
				</form>
			</div>
		</div>
	</div>
{{ end }}
