{{ define "environment" }}
	<div id="environment-basic-content">
		<table class="table table-striped table-bordered app-environment">
			<thead>
				<tr>
					<th>Name</th>
					<th class="expand">Value</th>
					<th><button id="environment-raw" class="btn btn-inverse btn-xs">Raw</button></th>
				</tr>
			</thead>
			<tfoot>
				<tr>
					<td><input type="text" name="name"></td>
					<td><input type="text" name="value"></td>
					<td><button id="environment-add" data-cluster="{{ .Cluster }}" data-app="{{ .App }}" class="btn btn-success btn-xs">Add</button></td>
				</tr>
			</tfoot>
			<tbody>
				{{ $root := . }}
				{{ range .Environment.SortedNames }}
					<tr>
						<td>{{ . }}</td>
						<td class="wrap expand">{{ index $root.Environment . }}</td>
						<td>
							<button data-cluster="{{ $root.Cluster }}" data-app="{{ $root.App }}" data-name="{{ . }}" class="environment-delete btn btn-danger btn-xs">Delete</button>
						</td>
					</tr>
				{{ end }}
			</tbody>
		</table>
	</div>
	<div id="environment-raw-content">
		<div class="panel">
			<textarea id="environment-content" class="environment">{{ .Environment.Raw }}</textarea>
			<div class="clearfix footer">
				<button id="environment-raw-save" class="btn btn-xs btn-primary pull-right" data-cluster="{{ .Cluster }}" data-app="{{ .App }}">Save</button>
				<button id="environment-raw-cancel" class="btn btn-xs btn-inverse pull-right">Cancel</button>
			</div>
		</div>
	</div>
{{ end }}

{{ define "logs" }}
	<pre id="app-logs" class="logs"><p>Connecting...</p></pre>
	<script>
		connect_log_socket($('#app-logs'), '/apps/{{ . }}/logs/stream');
	</script>
{{ end }}

{{ define "releases" }}
	{{ $active := .App.ActiveRelease }}
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>ID</th>
				<th class="expand">Created</th>
				<th>Build</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{ range .Releases }}
				<tr>
					<td class="id">{{ .Id }}</td>
					<td>{{ timeago .Created }}</td>
					<td class="id">{{ .Build }}</td>
					<td class="buttons">
						<button class="btn btn-xs btn-info" title="Env for {{ .Id }}" data-toggle="modal" data-target="#release-env-{{ .Id }}">Env</button>
					</td>
					<td class="buttons">
						{{ if eq .Id $active }}
							<button class="btn btn-success btn-xs promote-release release-active" data-release="{{ .Id }}">Active</button>
						{{ else }}
							<button class="btn btn-warning btn-xs promote-release" data-release="{{ .Id }}">Promote</button>
						{{ end }}
					</td>
				</tr>
			{{ end }}
		</tbody>
	</table>
	{{ range .Releases }}
		{{ template "release" . }}
	{{ end }}
	<script>
		$('.timeago').timeago();

		$('.promote-release').on('click', function() {
			$.ajax({ type: 'POST', url:window.location.pathname+'/promote', data: { release: $(this).data('release') }}).done(function(msg) {
				refresh_tab();
			}).fail(function(msg) {
				$('#alert .message').html(msg.responseText);
				$('#alert').show();
			});
		});
	</script>
{{ end }}

{{ define "release" }}
	<div id="release-env-{{ .Id }}" class="modal fade">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Env for {{ .Id }}</h4>
				</div>
				<div class="modal-body">
					<pre>{{ .Env }}</pre>
				</div>
			</div>
		</div>
	</div>
{{ end }}

