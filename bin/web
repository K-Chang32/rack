#!/bin/sh

pull_image() {
  image=$1
  echo "ns=kernel at=boot pull=$image"
  docker pull $image &
}

pull_image convox/architect
pull_image convox/build
pull_image convox/service

if [ "$DEVELOPMENT" == "true" ]; then
  $GOPATH/bin/rerun -build github.com/convox/kernel
else
  $GOPATH/bin/kernel
fi
